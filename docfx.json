{
	"$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
	"metadata": [
		{
			"src": [
				{
					"src": "src/Jiro.Kernel",
					"files": ["**/*.csproj"]
				}
			],
			"dest": "api",
			"properties": {
				"TargetFramework": "net9.0"
			}
		}
	],
	"build": {
		"content": [
			{
				"files": ["toc.yml", "index.md"]
			},
			{
				"files": ["docs/**/*.{md,yml}"],
				"src": ".",
				"dest": "docs"
			},
			{
				"files": ["*.yml", "*.md"],
				"src": "api",
				"dest": "api"
			}
		],
		"resource": [
			{
				"files": ["images/**", "assets/**"]
			}
		],
		"output": "generated",
		"template": ["default", "modern"],
		"globalMetadata": {
			"_appName": "Jiro",
			"_appTitle": "Jiro Documentation",
			"_enableSearch": true,
			"_enableNewTab": true,
			"_appLogoPath": "assets/Jiro0-40px.png",
			"_appFaviconPath": "assets/Jiro0-40px.png",
			"pdf": false,
			"_gitContribute": {
				"repo": "https://github.com/huebyte/Jiro",
				"branch": "main"
			}
		},
		"fileMetadata": {
			"_tocTitle": {
				"docs/**/*.md": "Documentation",
				"api/**/*.yml": "API Reference"
			}
		}
	}
}
