{
  "Chat": {
    "AuthToken": "YourOpenAiToken",
    "SystemMessage": "I want you to act as personal assistant called Jiro. You are friendly, funny and sarcastic. You can ask me anything you want and engage in conversation.",
    "TokenLimit": 2000,
    "Enabled": true
  },
  "ConnectionStrings": {
    "JiroContext": "Data Source=Data/Database/jiro.db"
  },
  "DataPaths": {
    "Logs": "Data/Logs",
    "Messages": "Data/Messages",
    "Plugins": "Data/Plugins",
    "Themes": "Data/Themes"
  },
  "JiroCloud": {
    "ApiKey": "your-api-key-here",
    "ApiUrl": "https://jiro.huebytes.com/api/",
    "Grpc": {
      "MaxRetries": 3,
      "ServerUrl": "https://jiro.huebytes.com/grpc",
      "TimeoutMs": 30000
    },
    "WebSocket": {
      "HandshakeTimeoutMs": 15000,
      "Headers": {
        "User-Agent": "Jiro-Bot/1.0"
      },
      "HubUrl": "https://jiro.huebytes.com/hubs/instanceHub",
      "KeepAliveIntervalMs": 15000,
      "ReconnectionAttempts": 5,
      "ReconnectionDelayMs": 5000,
      "ServerTimeoutMs": 30000
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Data/Logs/jiro-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithEnvironmentName"],
    "Properties": {
      "Application": "Jiro"
    }
  }
}
